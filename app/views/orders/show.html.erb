<% if current_user.admin? || current_user.id == @order.user_id%>
  <div class="w3-container w3-content w3-center w3-padding-64" style="max-width:1000px" id="band">
    <h2>Order Details</h2>

    <div class="w3-modal-content w3-card-4" style="max-width:600px">
      <div class="w3-center"><br>
        <i class="fa fa-shopping-bag" aria-hidden="true" class="w3-circle w3-margin-top"></i>

        <form class="w3-container">
          <div class="w3-section">

            <hr>
            <p>
              <label><b>First Name:</b></label>
              <%= @order.first_name %>
            </p>
            <p>
              <label><b>Last Name:</b></label>
              <%= @order.last_name %>
            </p>
            <p>
              <label><b>Sub Total:</b></label>
              <%= @order.sub_total %>
            </p>
            <p>
              <label><b>Total:</b></label>
              <%= @order.total %>
            </p>
            <p>
              <label><b>User ID:</b></label>
              <%= @order.user_id %>
            </p>
            <hr>

          </div>
        </form>

        <div class="w3-container w3-border-top w3-padding-16 w3-light-grey">
          <%#= link_to "Edit", edit_order_path(@order), class: 'w3-left w3-button w3-blue w3-round-large w3-border-blue w3-margin' %>
          <%= button_to "Delete", @order, class: 'w3-button w3-red w3-round-large w3-border-red w3-margin', method: :delete %>
        </div>

        <div class="w3-container w3-border-top w3-padding-16 w3-light-grey">
          <%= link_to "Back to orders", orders_path %>
        </div>

      </div>
    </div>
  </div>
<% else %>
  <div class="w3-container w3-content w3-center w3-padding-64" style="max-width:800px" id="band">
    <i class="fa fa-exclamation-circle" aria-hidden="true" class="w3-circle w3-margin-top"></i>
    <h2 class="w3-wide">Access Denied</h2>
    <p class="w3-opacity"><i>Sorry, you donâ€™t have permission to access this action.</i></p>
    <p class="w3-center">Please return to the homepage to continue using the application.</p>
  </div>
<% end %>
