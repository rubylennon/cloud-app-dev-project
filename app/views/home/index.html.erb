<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">

<!-- Header -->
<header id="index-container-1" class="w3-container w3-center" style="padding:128px 16px">
  <h1 class="w3-margin w3-jumbo">eCommerceApp</h1>
  <p class="w3-xlarge">Welcome to the eCommerceApp. Click the link below to view our products.</p>
  <%= link_to "View Products", products_path, class: "w3-button w3-black w3-padding-large w3-large w3-margin-top" %>
</header>

<!-- First Grid -->
<div id="index-container-2" class="w3-row-padding w3-padding-64 w3-container">
  <div class="w3-content">
    <div class="w3-twothird">
      <h1>Get Inspired</h1>
      <h5 class="w3-padding-32">Find style and design inspiration in our blog area.</h5>

      <p class="w3-text-grey">We have selected interior design, fashion and jewellery blogs to inspire you.</p>
      <%= link_to "Click here to find out more.", feeds_path, class: "w3-text-grey" %>
    </div>

    <div class="w3-third w3-center">
      <i class="fa fa-lightbulb-o w3-padding-64 w3-text-grey"></i>
    </div>
  </div>
</div>

<!-- Second Grid -->
<div id="index-container-3" class="w3-row-padding w3-light-grey w3-padding-64 w3-container">
  <div class="w3-content">
    <div class="w3-third w3-center">
      <i id="homepageBag" class="fa fa-shopping-bag w3-padding-64 w3-text-grey w3-margin-right"></i>
    </div>

    <div class="w3-twothird">
      <h1>Create an Account</h1>
      <h5 class="w3-padding-32">Create a user account to place orders.</h5>

      <p class="w3-text-grey">Creating a account will allow you to manage your account, create a user profile, view other profiles and to view your order history.</p>
      <%= link_to "Click here to sign up.", new_user_registration_path,  class: "w3-text-grey" %>
    </div>
  </div>
</div>

<div class="w3-container w3-black w3-center w3-opacity w3-padding-64">
  <h1 class="w3-margin w3-xlarge"></h1>
</div>

<script>
    // Used to toggle the menu on small screens when clicking on the menu button
    function myFunction() {
        var x = document.getElementById("navDemo");
        if (x.className.indexOf("w3-show") == -1) {
            x.className += " w3-show";
        } else {
            x.className = x.className.replace(" w3-show", "");
        }
    }
</script>
