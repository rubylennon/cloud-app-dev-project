<h1>Current Cart</h1>

<p>
  <%= link_to "Home", root_path %>
</p>
<p>
  <%= link_to "Continue Shopping", products_path %>
</p>
<p>
  <%= link_to pluralize(current_cart.items_count, 'item'), cart_path %>
</p>

<table>
  <thead>
  <tr>
    <td>Product</td>
    <td>Price</td>
    <td>Quantity</td>
    <td></td>
  </tr>
  </thead>
  <tbody>
  <% @items.each do |item| %>
    <tr>
      <td><%= item.product.product_name %></td>
      <td><%= number_to_currency item.price %></td>
      <td><%= item.quantity %></td>
      <td>
        <%= form_for item, method: :delete do |f| %>
          <%= f.submit "Remove" %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
  <tfoot>
    <td colspan="4" align="right">
      <%= number_to_currency current_cart.sub_total %>
    </td>
    <td colspan="4" align="right">
      <%= number_to_currency current_cart.total %>
    </td>
  </tfoot>
</table>

<%= link_to 'Checkout', checkout_path %>